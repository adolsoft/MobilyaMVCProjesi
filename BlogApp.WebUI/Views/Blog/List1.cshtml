@model IEnumerable<Blog>

<html>
<head>
    <title></title>
    @*<link href="~/css/bundle.css" rel="stylesheet" />*@
<link href="~/lib/font-awesome/css/all.css" rel="stylesheet" />
</head>
<body>

    <div class="container mt-3">
        <h2>Blog List</h2>
        <hr />
        <div class="row">
            <div class="col">
                @if (Model.Count() > 0)
                {
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Image</th>
                                <th>Title</th>
                                <th>Date</th>
                                <th>İs Approved</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.BlogId</td>
                                    <td>
                                        <img src="~/img/@item.Image" width="100" />
                                    </td>
                                    <td>@item.Title</td>
                                    <td>@item.Date</td>
                                    <td>
                                        @if (@item.isApproved)
                                        {
                                        <i class="fa fa-check" aria-hidden="true"></i>
                                        }
                                        else
                                        {
                                            <i class="fa fa-times" aria-hidden="true"></i>
                                        }

                                    </td>
                                    <td>
                                        <a class="btn btn-primary btn-sm" asp-controller="Blog" asp-action="Details" asp-route-id="@item.BlogId">
                                            Details
                                        </a>
                                        <a class="btn btn-danger btn-sm" asp-controller="Blog" asp-action="Delete" asp-route-id="@item.BlogId">
                                            Delete
                                        </a>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                }
                else
                {
                    <div class="alert alert-danger">
                        Blog Eklenmemiş.
                    </div>
                }
            </div>
        </div>
    </div>
    </body>
</html>